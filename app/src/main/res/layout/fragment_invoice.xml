<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentInvoice">
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent">

    <co.shoutnet.shoutcap.utility.ProportionalImageView
        android:id="@+id/img_invoice_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"/>

    <Button
        android:id="@+id/button_payment_confirmation_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Pembayaran"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        android:layout_below="@id/img_invoice_invoice"/>

    <LinearLayout
        android:id="@+id/lin_invoice_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
</RelativeLayout>
</ScrollView>