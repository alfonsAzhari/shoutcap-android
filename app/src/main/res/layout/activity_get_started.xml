<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.shoutnet.shoutcap.GetStartedActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/lin_button_get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_get_started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/background_btn_started"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_try_started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/background_btn_started"
            android:onClick="btnCreate"
            android:text="Let's Create"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <co.shoutnet.shoutcap.utility.CirclePageIndicator
        android:id="@+id/indicator_get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lin_button_get_started"
        android:padding="10dp" />
</RelativeLayout>
